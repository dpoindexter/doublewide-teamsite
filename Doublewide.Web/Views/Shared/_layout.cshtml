<!DOCTYPE html>
<html>
<head>
    <title>DW*TX | Doublewide Ultimate Club, Austin Texas</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/lib/bootstrap.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/content/css/main.css")"/>
    @Html.AssetsHelper().Styles.Render()

    <script type="text/javascript" src="//use.typekit.net/kvk7cal.js"></script>
    <script type="text/javascript">try { Typekit.load(); } catch (e) { }</script>
</head>
<body>
    <div class="container">
        <header class="@ViewBag.HeaderClass">
            <a class="logotype span4" href="@Url.Content("~/")"></a>
            <nav class="span7">
                <a href="@Url.Content("~/news")">News</a>
                <a href="@Url.Content("~/players")">Players</a>
                <a href="@Url.Content("~/results")">Results</a>
                <a href="@Url.Content("~/media")">Media</a>
            </nav>
        </header>
        @if (ViewBag.HasHeaderPhoto){
            <a class="photo-attribution visible" href="http://jeffbellphoto.ca/" target="_blank">Photo &copy; Jeff Bell</a>    
        }
        <section class="content row">
            <section class="@Html.CssClasses("span4", (string)ViewBag.SidebarClass)">
                @RenderSection("sidebar", true)
            </section>
            <section class="@Html.CssClasses("span8", (string)ViewBag.ContentClass)">
                @RenderBody()
            </section>
        </section>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    @Html.AssetsHelper().Scripts.Render()
    @RenderSection("js", false)
</body>
</html>
