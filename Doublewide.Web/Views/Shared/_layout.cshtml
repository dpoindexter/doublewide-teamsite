<!DOCTYPE html>
<html>
<head>
    <title>DW*TX | Doublewide Ultimate Club, Austin Texas</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/lib/foundation.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/content/css/main.css")"/>
    @Html.Assets().Styles.Render()

    <script type="text/javascript" src="//use.typekit.net/kvk7cal.js"></script>
    <script type="text/javascript">try { Typekit.load(); } catch (e) { }</script>
</head>
<body>
    <div class="container row">
        <header class="@ViewBag.HeaderClass">
            <div class="twelve columns">
                <a class="logotype four columns" href="@Url.Content("~/")"></a>
                <nav class="eight columns">
                    <a href="@Url.Content("~/news")">News</a>
                    <a href="@Url.Content("~/players")">Players</a>
                    <a href="@Url.Content("~/results")">Results</a>
                    <!--<a href="@Url.Content("~/media")">Media</a>-->
                </nav>
            </div>
            @if (ViewBag.HeaderClass == "home")
            {
                <section class="callout twelve columns">
                    @RenderSection("callout", false)
                </section>
            }
        </header>
        @if (false){
            <a class="photo-attribution visible" href="http://jeffbellphoto.ca/" target="_blank">Photo &copy; Jeff Bell</a>    
        }
        <section class="content">
            <section class="@Html.CssClasses("four columns", (string)ViewBag.SidebarClass)">
                @RenderSection("sidebar", true)
            </section>
            <section class="@Html.CssClasses("eight columns", (string)ViewBag.ContentClass)">
                @RenderBody()
            </section>
        </section>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    @Html.Assets().Scripts.Render()
    @RenderSection("js", false)
</body>
</html>
